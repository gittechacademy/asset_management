<div class="row">
  <div class="col-6">
   <%= form_with(model: bland, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
          <%= f.label :name, '銘柄名' %>
          <%= f.text_field :name, class: 'form-control' %>
      </div>
  
      <div class="form-group">
          <%= f.label :code, 'コード' %>
          <%= f.text_field :code, class: 'form-control' %>
          <small class="form-text text-muted">4桁数字</small>
      </div>
      
      <div class="form-group">
          <%= f.label :type_name_id, '種類' %>
          <%= f.collection_select(:type_name_id, @type_names, :id, :name, {}, class: "form-control") %>
      </div>
      
      <%= f.submit '作成', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>