<% if logged_in? %>

<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">
          <%= current_user.name %>
        </h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(current_user, { size: 300 }) %>" alt="">
      </div>
    </div>
  </aside>

  <div class="col-sm-8">
    <div class="card">
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><h3>名前</h3></li>
        <li class="list-group-item"><h3>資産額</h3></li>
        <li class="list-group-item"><h3>損益額</h3></li>
      </ul>
    </div>
  </div>


<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>資産運用</h1>
        <%= link_to '今すぐサインアップ!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>